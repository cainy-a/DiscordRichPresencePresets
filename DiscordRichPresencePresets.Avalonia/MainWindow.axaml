<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DiscordRichPresencePresets.Avalonia.MainWindow"
        Title="Discord RP Presets" Height="500" Width="650"
        Name="Root">
	<Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*,*,*,*">
		<Grid.Styles>
			<Style Selector="Button.actionbutton">
				<Setter Property="HorizontalAlignment" Value="Stretch" />
				<Setter Property="HorizontalContentAlignment" Value="Center" />
			</Style>
			<Style Selector="Button.compactbutton">
				<Setter Property="Padding" Value="5,2" />
			</Style>
			<Style Selector="Button">
				<Setter Property="Margin" Value="5" />
			</Style>
		</Grid.Styles>

		<!-- Title -->
		<TextBlock Text="Discord Rich Presence Presets" FontSize="25" Margin="5,5,0,5" Grid.ColumnSpan="4" Grid.Column="0" Grid.Row="0" />

		<!-- Action buttons -->
		<Button Classes="actionbutton" Content="Add" Margin="5,5,5,5" Grid.Row="1" Grid.Column="0" Click="AddPresence" />
		<Button Classes="actionbutton" Content="Load" Margin="5,5,5,5" Grid.Row="1" Grid.Column="1" Click="LoadPresences" />
		<Button Classes="actionbutton" Content="Save" Margin="5,5,3,5" Grid.Row="1" Grid.Column="2" Click="SavePresences" />
		<Button Classes="actionbutton" Content="Options" Margin="5,5,3,5" Grid.Row="1" Grid.Column="3" Click="OptionsPopup" />

		<!-- List of presences -->
		<ScrollViewer Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Top">
			<StackPanel Name="PanelPresenceList">
				<!-- The following code has been re-written as C# objects and will be dynamically added -->

